.heroplates
	position relative
	width 100%
	padding-bottom 45% 
	overflow hidden
	
	&__pane
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		width 100%
		height 100%
		overflow hidden
		background-size cover
		background-position center center
		transform-origin 0 100%		
			
		&--bottom
			-webkit-transform skewX(-55deg) translateX(-50%) translateY(-50%)
			-moz-transform skewX(-55deg) translateX(-50%) translateY(-50%)
			-ms-transform skewX(-55deg) translateX(-50%) translateY(-50%)
			-o-transform skewX(-55deg) translateX(-50%) translateY(-50%)
			transform skewX(-55deg) translateX(-50%) translateY(-50%)
			-webkit-backface-visibility hidden
			top 50%
			left 50%
			border-left 7px solid $primary
			
	&__pane-content
		background-size cover
		background-position 100%
		-webkit-transform skewX(55deg) 
		-moz-transform skewX(55deg) 
		-ms-transform skewX(55deg) 
		-o-transform skewX(55deg) 
		transform skewX(55deg)  
		transform-origin inherit
		width 100%
		height 100%