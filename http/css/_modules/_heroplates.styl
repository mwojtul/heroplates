.heroplates
	overflow hidden
	position relative
	margin 0 auto
	width 700px
	height 400px

	&__pane
		width 100%
		height 100%
		overflow hidden
		position absolute		
		-webkit-transform skewX(-55.98deg) 
		-moz-transform skewX(-55.98deg) 
		-ms-transform skewX(-55.98deg) 
		-o-transform skewX(-55.98deg) 
		transform skewX(-55.98deg) 
		transition all 0.25s ease-in-out

		&:first-child
			left -.25em
			transform-origin 100% 0
		
		&:last-child
			right -0.25em
			transform-origin 0 100%
		
		&--top			
			&:hover
				width 120%
				z-index 10

		&--bottom			
			&:hover
				width 120%
			

			
	&__pane:after, &__img
		-webkit-transform skewX(55.98deg) 
		-moz-transform skewX(55.98deg) 
		-ms-transform skewX(55.98deg) 
		-o-transform skewX(55.98deg) 
		transform skewX(55.98deg) 
		transform-origin inherit
			
	&__img
		width 100%
		height 100%
		width 1920px
		position absolute
		
		&--top
			left 0

		&--bottom
			right 0





